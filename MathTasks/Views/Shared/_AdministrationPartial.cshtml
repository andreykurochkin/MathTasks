    @if (_signInManager.IsSignedIn(User)) {
        @if (User.IsInRole("Administrator")) {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Administration" asp-action="Index">Administration</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Roles" asp-action="Index">Users Roles</a>
            </li>
        }
    }
</ul>