@model IdentityUserEditViewModel
@{
    ViewBag.Title = "Edit User";
}

<h1>Edit</h1>
<h4>User</h4>
<hr />
<div class="row">
    <form asp-antiforgery="true" method="post" asp-action="Edit">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" readonly="readonly" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="IsAdmin" class="col-sm-2 form-label"></label>
            <div class="col-sm-10">
                <input type="checkbox" asp-for="IsAdmin" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="MathTaskContentEditorClaims" class="col-sm-2 form-lable">Content Editor</label>
            <hr />
            @for (var i = 0; i < Model!.MathTaskContentEditorClaims!.Count; i++)
            {
                <input type="hidden" asp-for="@Model.MathTaskContentEditorClaims[i].ClaimType" />
                <input type="hidden" asp-for="@Model.MathTaskContentEditorClaims[i].ClaimValue" />
                <label asp-for="@Model.MathTaskContentEditorClaims[i].DisplayName" class="col-sm-2">@Model.MathTaskContentEditorClaims[i].DisplayName</label>
                <div class="col-sm-10">
                    <input type="checkbox" asp-for="@Model.MathTaskContentEditorClaims[i].IsSelected" />
                </div>
            }
        </div>
        <div class="form-group">
            <input name="Save" type="submit" class="btn btn-primary" />
        </div>
    </form>
</div>