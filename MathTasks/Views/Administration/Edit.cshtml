@model EditIdentityUserViewModel
@{
    ViewBag.Title = "Edit User";
}

<h1>Edit</h1>
<h4>User</h4>
<hr />
<div class="row">
    <form method="post" asp-action="Edit">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" readonly="True" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="IsAdmin" class="col-sm-2 form-label"></label>
            <div class="col-sm-10">
                <input type="checkbox" asp-for="IsAdmin" />
            </div>
        </div>
        <div class="form-group">
            <input name="Save" type="submit" class="btn btn-primary" />
        </div>
    </form>
</div>