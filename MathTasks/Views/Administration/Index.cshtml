@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@{bool AnyUserExists = Model.Any(); }

@if (!AnyUserExists) {
    <div class="card">
        <div class="card-header">No users created</div>
    </div>
}

@if (AnyUserExists) {
    <table class="table">
        <tr>
            <th>Email</th>
        </tr>
        @foreach (var user in Model) {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="ViewUserContent" asp-route-userid="@user.Id">
                        View Content
                    </a>
                </td>
            </tr>
        }
    </table>
}